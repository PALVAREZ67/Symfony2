{% extends "base.html.twig" %}

{% block body %}
	<h1>Toutes les catégories :</h1>

	{% for category in categories %}
		<h2>{{ loop.index }}
			/
			{{category.name}}</h2>
		<a href="{{ path('category_show', {'categoryName': category.name}) }}">Voir la catégorie</a>
	{% else %}
		Aucune catégorie existante
	{% endfor %}


{% endblock %}
